<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/favorite_item_height"
    android:orientation="horizontal"
    android:layout_margin="@dimen/marge"
    android:background="?android:attr/selectableItemBackground"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.7"
        >
        <TextView
            android:id="@+id/favorite_item_city"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="bottom"
            android:text="..."
            android:textSize="@dimen/favorite_item_text_city"
            android:textColor="@color/purple_500"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/favorite_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="top"
            android:text="..."
            android:textColor="@color/purple_500"
            android:textSize="@dimen/favorite_item_text_desc"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/favorite_item_icon"
        android:layout_width="@dimen/favorite_item_image_desc_width"
        android:layout_height="@dimen/favorite_item_image_desc_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/marge"
        android:layout_marginRight="@dimen/marge"
        />
    <TextView
        android:id="@+id/favorite_item_temp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="...Â°C"
        android:gravity="center"
        android:textAlignment="textEnd"
        android:textSize="@dimen/favorite_item_text_temp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"/>


</LinearLayout>